<Window x:Class="lesson4.MainAuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lesson4"
        mc:Ignorable="d"
        Title="MainAuthWindow" Height="800" Width="900">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open"></MenuItem>
                <MenuItem Header="Create"></MenuItem>
                <MenuItem Header="Connect"></MenuItem>
                <MenuItem Header="Operator List" x:Name="miOperatorList" Click="miOperatorList_Click"></MenuItem>
                <MenuItem Header="Delete"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Close" x:Name="miClose" Click="miClose_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <Label DockPanel.Dock="Bottom" Content="Connection:"></Label>
        <StackPanel>
            <Frame x:Name="frameMain"></Frame>
        </StackPanel>
    </DockPanel>
</Window>
