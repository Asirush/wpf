<Window x:Class="homework1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:homework1"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="450">
    <Grid>
        <StackPanel>
            <Label  x:Name="labelTitle">Title</Label>
            <Label  x:Name="labelDescription">Description</Label>
            <Label  x:Name="labelManagingEditor">ManagingEditor</Label>
            <Label  x:Name="labelGenerator">Generator</Label>
            <Label  x:Name="labelPubdate">Pubdate:</Label>
            <TextBox Text="path to a file"  Margin="30, 0"></TextBox>
        </StackPanel>
        
        <DockPanel VerticalAlignment="Bottom">
            <Button x:Name="CreateXML" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="btnCreate_Click" >Create XML</Button>
            <Button  x:Name="btnInfo"  Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Get Information" Click="btnInfo_Click"/>
        </DockPanel>
    </Grid>
</Window>
